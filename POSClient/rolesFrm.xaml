<Window x:Class="POSClient.rolesFrm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POSClient"
        mc:Ignorable="d"
        Title="Roles" Height="450" Width="356.398" FontSize="16" Loaded="Window_Loaded" Icon="icon.png">
    <Grid>
        <Grid x:Name="background_pnl" HorizontalAlignment="Left" Height="140" VerticalAlignment="Top" Width="350" Margin="0,0,-0.4,0">
            <Label Content="Role Name" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txt_roleName" HorizontalAlignment="Left" Height="23" Margin="124,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="197" BorderThickness="0,0,0,1"/>
            <Button x:Name="btn_addRole" Content="Add" HorizontalAlignment="Left" Margin="199,99,0,0" VerticalAlignment="Top" Width="122" Click="btn_addRole_Click" BorderThickness="0" Background="#FF141414" Foreground="#FFFAFAFA" Height="29"/>
        </Grid>
        <DataGrid x:Name="dgv_roles" HorizontalAlignment="Left" Height="275" Margin="0,145,-0.4,0" VerticalAlignment="Top" Width="350"/>

    </Grid>
</Window>
