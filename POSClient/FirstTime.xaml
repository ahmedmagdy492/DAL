            </Grid>
            <TextBlock HorizontalAlignment="Left" Margin="315,148,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" RenderTransformOrigin="0.482,-0.348" Foreground="#FFBFB7B7"/>
            <TextBox x:Name="txt_username" HorizontalAlignment="Left" Height="23" Margin="315,169,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" BorderThickness="0,0,0,1"/>
            <Image HorizontalAlignment="Left" Height="62" Margin="388,52,0,0" VerticalAlignment="Top" Width="64" Source="icons8_settings_48px.png" RenderTransformOrigin="0.928,0.524"/>

        </Grid>

