            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF009688" Offset="0"/>
                    <GradientStop Color="#74c35a" Offset="1"/>
                    <GradientStop Color="#6dbf51" Offset="2"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid HorizontalAlignment="Left" Height="234" Margin="291,119,0,0" Background="White" VerticalAlignment="Top" Width="249">
                <Grid.Effect>
                    <DropShadowEffect Color="#FFD1D0D0"/>
                </Grid.Effect>
                <TextBlock HorizontalAlignment="Left" Margin="26,96,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" RenderTransformOrigin="0.482,-0.348" Foreground="#FFBFB7B7"/>
